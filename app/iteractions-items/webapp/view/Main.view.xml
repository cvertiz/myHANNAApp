<mvc:View
    controllerName="myhanapp.iteractionsitems.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
    <f:DynamicPage id="dynamicPageId">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>title}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <fb:FilterBar
                    showRestoreButton="false"
                    useToolbar="false"
                    showFilterConfiguration="false"
                    showGoOnFB="false"
                >
                    <fb:filterGroupItems>
                        <fb:FilterGroupItem
                            name="interactions"
                            groupName="filters"
                            label="items"
                            visibleInFilterBar="true"
                        >
                            <fb:control>
                                <Input
                                    id="searchField"
                                    placeholder="Search"
                                    liveChange="onSearch"
                                />
                            </fb:control>
                        </fb:FilterGroupItem>
                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                id="itemsTable"
                growing="true"
                growingThreshold="10"
                items="{ path:'/interactions_Products', parameters:{$count:true} }"
                mode="SingleSelectLeft"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer />
                            <Button
                                icon="sap-icon://add"
                                text="Add"
                                press="onAddItem"
                                type="Emphasized"
                            />
                            <Button
                                icon="sap-icon://delete"
                                text="Delete"
                                press="onDeleteItem"
                                type="Negative"
                                enabled="false"
                            />
                            <Button
                                icon="sap-icon://sort"
                                text="Sort"
                                press="onSortItem"
                                type="Transparent"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Name" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{name}" />
                            <Text text="{created_at}" />
                            <ObjectNumber
                                number="{price}"
                                unit="{currency}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>

    <Dialog
        id="addProductDialog"
        title="Add Product"
        class="sapUiResponsivePadding"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Name" />
                <Input
                    id="inputName"
                    placeholder="Enter product name"
                />

                <Label text="Price" />
                <Input
                    id="inputPrice"
                    placeholder="Enter price"
                    type="Number"
                />

                <Label text="Currency" />
                <Input
                    id="inputCurrency"
                    placeholder="Enter currency (e.g., USD)"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveProduct"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCloseDialog"
            />
        </endButton>
    </Dialog>
</mvc:View>
