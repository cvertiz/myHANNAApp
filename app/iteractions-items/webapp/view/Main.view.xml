        <f:content>
            <Table
                id="itemsTable"
                growing="true"
                growingThreshold="10"
                items="{ path:'/Interactions_Items', parameters:{$count:true} }"
                mode="SingleSelectLeft"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer />
                            <Button
                                icon="sap-icon://add"
                                text="Add"
                                press="onAddItem"
                                type="Emphasized"
                            />
                            <Button
                                icon="sap-icon://delete"
                                text="Delete"
                                press="onDeleteItem"
                                type="Negative"
                                enabled="false"
                            />
                            <Button
                                icon="sap-icon://sort"
                                text="Sort"
                                press="onSortItem"
                                type="Transparent"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Interaction ID" />
                    </Column>
                    <Column>
                        <Text text="Text" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{text}" />
                            <Text text="{date}" />
                            <ObjectNumber
                                number="{price}"
                                unit="{currency_code}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
