<mvc:View
    controllerName="myhanapp.iteractionsitems.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
    <f:DynamicPage id="dynamicPageId">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>title}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <fb:FilterBar
                    showRestoreButton="false"
                    useToolbar="false"
                    showFilterConfiguration="false"
                    showGoOnFB="false"
                >
                    <fb:filterGroupItems>
                        <fb:FilterGroupItem
                            name="interactions"
                            groupName="filters"
                            label="items"
                            visibleInFilterBar="true"
                        >
                            <fb:control>
                                <Input
                                    id="searchField"
                                    placeholder="Search"
                                    liveChange="onSearch"
                                />
                            </fb:control>
                        </fb:FilterGroupItem>
                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        

        <f:content>
            <Table
                id="itemsTable"
                growing="true"
                growingThreshold="10"
                items="{ path:'/Interactions_Items', parameters:{$count:true} }"
                mode="SingleSelectLeft"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer />
                            <Button
                                icon="sap-icon://add"
                                text="Add"
                                press="onAddItem"
                                type="Emphasized"
                            />
                            <Button
                                icon="sap-icon://delete"
                                text="Delete"
                                press="onDeleteItem"
                                type="Negative"
                                enabled="false"
                            />
                            <Button
                                icon="sap-icon://sort"
                                text="Sort"
                                press="onSortItem"
                                type="Transparent"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Interaction ID" />
                    </Column>
                    <Column>
                        <Text text="Text" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{text}" />
                            <Text text="{date}" />
                            <ObjectNumber
                                number="{price}"
                                unit="{currency_code}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
